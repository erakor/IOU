!!!
%html
  %head
    %title Iou
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{:class => :"two-col"}
    #container.showgrid
      #header
        .user-menu
          - if user_signed_in?
            = current_user.email
            |
            =link_to 'logout', :destroy_user_session, :method => :delete
          - else
            =link_to 'login', :new_user_session

        %p{:class => :notice}= notice
        %p{:class => :notice}= alert

      #sidebar
        %ul
          %li= link_to 'Overview', dashboard_index_path
          %li= link_to 'New bill', new_transaction_path
          %li= link_to 'See all bills', transactions_path

      #content
        = yield

